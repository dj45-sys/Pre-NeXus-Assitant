<Window x:Class="ProyectosNexusAlpha.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectosNexusAlpha"
        mc:Ignorable="d"
        Title="NeXus Assistant" Height="250" Width="500" Background="Black">
    <Grid Loaded="loaded_Loaded">
        <ProgressBar x:Name="pbAudio" HorizontalAlignment="Left" Height="27" VerticalAlignment="Top" Width="196" Margin="374,96,-78,0" RenderTransformOrigin="0.5,0.5">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="89.576"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <Label x:Name="lblTextoReconocido" Content="" HorizontalAlignment="Left" Height="99" Margin="111,60,0,0" VerticalAlignment="Top" Width="267" Background="Black" FontSize="18" Foreground="White"/>
    </Grid>
</Window>
